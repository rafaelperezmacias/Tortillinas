<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera05H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".05"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera45H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".45"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera55H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".55"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera95H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".95"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera05V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera45V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".45"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera55V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".55"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/frontera95V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".95"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/btnClientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Clientes"
        app:layout_constraintTop_toTopOf="@id/frontera05H"
        app:layout_constraintLeft_toLeftOf="@id/frontera05V"
        app:layout_constraintRight_toRightOf="@id/frontera45V"
        app:layout_constraintBottom_toBottomOf="@id/frontera45H"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Sucursales"
        app:layout_constraintTop_toTopOf="@id/frontera05H"
        app:layout_constraintLeft_toLeftOf="@id/frontera55V"
        app:layout_constraintRight_toRightOf="@id/frontera95V"
        app:layout_constraintBottom_toBottomOf="@id/frontera45H"/>

    <Button
        android:text="Ventas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frontera55H"
        app:layout_constraintLeft_toLeftOf="@id/frontera05V"
        app:layout_constraintRight_toRightOf="@id/frontera45V"
        app:layout_constraintBottom_toBottomOf="@id/frontera95H"/>

    <Button
        android:text="Empleados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frontera55H"
        app:layout_constraintLeft_toLeftOf="@id/frontera55V"
        app:layout_constraintRight_toRightOf="@id/frontera95V"
        app:layout_constraintBottom_toBottomOf="@id/frontera95H"/>

</androidx.constraintlayout.widget.ConstraintLayout>